<center>
  <%=@tela%>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><h1>Formulario de  atualização de cadastro de usuario</h1></h3>
    </div>
    <div class="panel-body">
       <form name="cadastro" action="salvo" method="post">
            <div class="form-group">
                <label for="exampleInputPassword1">Nome</label>
                <input type="text" name="usrname" value=<%=@tela['name']%> class="form-control"  >
            </div>
             <div class="form-group">
                <label for="exampleInputPassword1">CPF</label>
                <input type="number" name="usrcpf" class="form-control" value=<%=@tela['CPF']%>  >
            </div>
             <div class="form-group">
                <label for="exampleInputPassword1">Endereço</label>
                <input type="text" name="usraddr" class="form-control" value=<%=@tela['address']%> >
            </div>
             <div class="form-group">
                <label for="exampleInputPassword1">Cidade</label>
                <input type="text" name="usradcit" class="form-control" value=<%=@tela['city']%> >
            </div>
             <div class="form-group">
                <label for="exampleInputPassword1">Estado</label>
                <input type="text" name="usraduf" class="form-control" value=<%=@tela['UF']%> >
            </div>
             <div class="form-group">
                <label for="exampleInputPassword1">Região</label>
                <input type="text" name="usrarea" class="form-control" value=<%=@tela['area']%> >
            </div>
             <div class="form-group">
                <label for="exampleInputPassword1">Bairro</label>
                <input type="text" name="usrbairro" class="form-control" value=<%=@tela['bairro']%>>
            </div>
             <div class="form-group">
                <label for="exampleInputPassword1">CEP</label>
                <input type="number" name="usradcep" class="form-control" value=<%=@tela['CEP']%> >
            </div>
             <div class="form-group">
                <label for="exampleInputPassword1">Celular</label>
                <input type="number" name="usrphone" class="form-control" value=<%=@tela['phone']%> >
            </div>
  
            
            
        
            <button type="submit" class="btn btn-primary">Subimeter</button>
        </form>
    </div>
         
   
   
   
 
 
  
  
 
</center>